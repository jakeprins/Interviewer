<div class="login-page">
  <div class="form">
    <%= form_for @category do |f| %>
    <%= f.error_messages %>
    <form class="register-form">
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Name of subject" %>
      </div>

      <div class="form-group">
         <%= f.text_field :description, class: "form-control", placeholder: "Description.. " %>
      </div>

      <div class="actions">
        <%= f.submit "Add to subjects", class: "button" %>
      </div>

      <% end %>

    </form>
  </div>
</div>
